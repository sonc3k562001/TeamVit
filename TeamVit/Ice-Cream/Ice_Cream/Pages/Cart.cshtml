@page

@model CartModel

<h2>Your Cart</h2>

    <link rel="stylesheet" href="~/css/Cart.css" />
    <main>
        <div class="basket">
            <div class="basket-module">
                <label for="promo-code">Enter a promotional code</label>
                <input id="promo-code" type="text" name="promo-code" maxlength="5" class="promo-code-field">
                <button class="promo-code-cta">Apply</button>
            </div>

            <div class="basket-labels">
                <ul>
                    <li class="item item-heading">Your Ice Cream</li>
                    <li class="price">Price</li>

                </ul>
            </div>

            @foreach (var line in Model.Cart.Lines)
            {
                <div class="basket-product">
                    <div class="item">
                        <div class="product-image">
                            <img src="@line.Product.Image" width="120" height="166" alt="Placholder Image 2 120x166" class="product-frame">
                        </div>
                        <div class="product-details">
                            <h1><strong>@line.Product.Name</strong> - @line.Product.Category</h1>
                        </div>
                    </div>
                    <div>@line.Product.Price.ToString("c")</div>
                    <div class="remove">
                        <button>Remove</button>
                    </div>
                </div>
            }
        </div>

        <aside>
            <div class="summary">
                <div class="summary-total-items"><span class="total-items"></span> Items in your Bag</div>
                <div class="summary-subtotal">
                    <div class="summary-promo hide">
                        <div class="promo-title">Promotion</div>
                        <div class="promo-value final-value" id="basket-promo">
                            <p>Note:</p>
                        </div>
                    </div>
                </div>
                <div class="summary-delivery">
                    <select name="delivery-collection" class="summary-delivery-selection">
                        <option value="0" selected="selected">Choose the form of payment</option>
                        <option value="collection">Payment on delivery</option>
                        <option value="first-class">Payment through electronic wallet</option>
                        <option value="second-class">Payment via bank account</option>
                        <option value="signed-for">Pay by credit card</option>
                    </select>
                </div>
                <div class="summary-total">
                    <div class="total-title">Total:</div>
                    <div class="total-value final-value" id="basket-total">@Model.Cart.ComputeTotalValue().ToString("c")</div>
                </div>
                <div class="summary-checkout">
                    <button class="checkout-cta">Go to Secure Checkout</button>
                </div>
            </div>
        </aside>
    </main>

    <div class="text-center">
        <a class="btn btn-primary" href="@Model.ReturnUrl">Continue shopping</a>
    </div>

