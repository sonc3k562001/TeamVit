@model Product




<style>
    .one-third{
        position:relative;
        z-index:1;
    }

h1 {
  text-align: left;
  font-family: Tahoma, Arial, sans-serif;
  color: #06D85F;
  margin: 80px 0;
}

.box {
  width: 40%;
  margin: 0 auto;
  background: rgba(255,255,255,0.2);
  padding: 35px;
  border: 2px solid #fff;
  border-radius: 20px/50px;
  background-clip: padding-box;
  text-align: left !important;
}

.button {
 
}
.button:hover {
  
}

.overlay {
  position: absolute;
  z-index:1;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.7);
  transition: opacity 500ms;
  visibility: hidden;
  opacity: 0;
}
.overlay:target {
  visibility: visible;
  opacity: 1;
}

    .popup {
        margin: 70px auto;
        padding: 20px;
        background: #fff5f7;
        border-radius: 5px;
        width: 50%;
        height: auto;
        position: relative;
        transition: all 5s ease-in-out;
    }

.popup h2 {
  margin-top: 0;
  color: #333;
  font-family: Tahoma, Arial, sans-serif;
}
.popup .close {
  position: absolute;
  z-index:1;
  top: 20px;
  right: 30px;
  transition: all 200ms;
  font-size: 30px;
  font-weight: bold;
  text-decoration: none;
  color: #333;
}
    .popup .close:hover {
        color: #d41442;
    }
.popup .content {
  max-height: 30%;
  overflow: auto;
}
</style>

<div id="popup" class="overlay">
    <div class="popup">
        <h2>@Model.Name</h2>
        <a class="close" href="#">&times;</a>
        <div class="content">
            <p><b>Description:</b>@Model.Description</p>
            <p><b>Ingredients:</b>@Model.Ingredients</p>
            <p><b>Recipe:</b>@Model.Recipe</p>
            <p><b>Note:</b>@Model.Note</p>
            <p><b>Price:</b>@Model.Price</p>
            <p><b>Category:</b>@Model.Category</p>

        </div>
    </div>
</div>

<div class="one-third mcb-wrap" style="padding:0 1%">
    <div>
        <div class="column one">
            <div style="background-color: #ffd4de; padding: 0 0 40px; border-radius: 20px;text-align: center;margin-top:100px">
                <div class="image_frame" style="margin-top:-80px;border-width: 0">
                    <div class="image_wrapper">
                        <img class="scale-with-grid" src="https://themes.muffingroup.com/be/icecream2/wp-content/uploads/2019/09/icecream2-ourproducts-pic2.png" width="780" height="780" />
                        <hr class="no_line" style="margin:0 auto 10px" />
                        <h6 style="color: #ffb8c9; margin-bottom: 2px">@Model.Category</h6>
                        <h4>
                            @Model.Name
                        </h4>
                        <p style="margin: 0 10%;">@Model.Description</p>
                        <hr class="no_line" style="margin: 0 auto 20px" />
                        <div class="image_frame no_border" style="border-width: 0;border-color: #f8f8f8;">
                            <div class="i" style=" border-color: #e2e2e2; position:relative; overflow:hidden; box-sizing:border-box">
                                <a class="button" href="#popup">
                                    <div style="box-shadow: inset 0 0 5px 2px rgba(0,0,0,.07);display: none!important;position:absolute;z-index:2;width:100%;height:100%"></div>
                                    <img src="https://themes.muffingroup.com/be/icecream2/wp-content/uploads/2019/09/icecream2-arrow-right.png" style=" max-width: 100%; height: auto" width="40" height="40" />
                                    </a>
                                    <div style="display: none;">
                                        <a> <i style="font-style:italic"></i></a>

                                    </div>
</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

