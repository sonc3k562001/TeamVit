@model Product

<div class="card card-outline-primary m-1 p-1">
    <div class="col-4" style="float: left;">
        <img src="@Model.Image" alt="" style="width:25vw;height:25vw;" />
        <h3 style="color:red;text-align:center">@Model.Name</h3>
        <b>Decription:</b> @Model.Description
        <br />
        <b>Price:</b> @Model.Price.ToString("c")
        <br />
        <b>Category:</b> @Model.Category
        <br />
        <b>Recipe:</b> @Model.Recipe
        <br />
        
        <hr />
    </div>

</div>